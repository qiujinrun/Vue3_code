{
  "compilerOptions": {
    "outDir": "dist",//输出的目录
    "sourceMap":false,//是否生成sourcemap
    "target": "ES2016",//目标语法
    "module": "ESNext",//模块格式
    "moduleResolution": "node",//模块解析策略
    "strict": false,//严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语法映入commonjs模块
    "jsx": "preserve",//jsx不转义
    "lib": ["dom","esnext"],//包含的库文件
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"],
    }
  }
}